<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Guild Dashboard</title>
    <link rel="stylesheet" href="/styles/home.css" />
    <style>
      /* Your existing CSS here */
      body {
        overflow-y: hidden;
        margin: 0;
        padding: 0;
        background-color: #0f0f1a;
        color: white;
        font-family: Arial, sans-serif;
      }
      main {
        display: flex;
        width: 100%;
        height: 100vh;
      }
      footer {
        display: none;
      }
      .sidebar {
        overflow-y: scroll;
        width: 240px;
        background-color: #151520;
        padding: 20px 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        border-right: 1px solid rgba(255, 255, 255, 0.05);
      }
      .guild-display {
        display: flex;
        align-items: center;
        background: #222237;
        border-radius: 8px;
        padding: 10px;
        width: 90%;
        margin-bottom: 20px;
      }
      .guild-display img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 10px;
      }
      .guild-name {
        font-size: 14px;
        font-weight: bold;
        color: white;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 130px;
      }
      .dashboard-links {
        display: flex;
        flex-direction: column;
        width: 100%;
      }
      .dashboard-links a {
        display: block;
        padding: 12px 20px;
        color: white;
        text-decoration: none;
        width: 100%;
        text-align: left;
        transition: background 0.2s;
        cursor: pointer;
      }
      .dashboard-links a:hover {
        background: #242446;
      }
      .dashboard-links a.active {
        background-color: #5865f2;
        color: white;
        font-weight: 700;
      }
      .contentDashboard {
        flex: 1;
        padding: 20px;
        overflow-y: auto;
      }

      .delete-btn {
        margin-top: auto;
        background-color: #e53935;
        color: white;
        font-weight: bold;
        padding: 12px 20px;
        border-radius: 4px;
        text-align: center;
        transition: background-color 0.3s ease;
        cursor: pointer;
      }
      .delete-btn:hover {
        background-color: #b71c1c;
      }
    </style>
  </head>
  <body>
    <main>
      <div class="sidebar">
        <!-- Guild Info -->
        <div class="guild-display">
          <img
            src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png?size=64"
            alt="Guild Icon"
          />
          <span class="guild-name"><%= guild.name %></span>
        </div>

        <!-- Menu -->
        <div class="dashboard-links">
          <a
            href="/dashboard/<%= guild.id %>/overview"
            data-url="/dashboard/<%= guild.id %>/overview"
            >Overview</a
          >
          <a
            href="/dashboard/<%= guild.id %>/subscription"
            data-url="/dashboard/<%= guild.id %>/subscription"
            >Subscription</a
          >
          <a
            href="/dashboard/<%= guild.id %>/plugins-carts"
            data-url="/dashboard/<%= guild.id %>/plugins-carts"
            >Plugins Carts</a
          >
          <a
            href="/dashboard/<%= guild.id %>/contact-support"
            data-url="/dashboard/<%= guild.id %>/contact-support"
            >Contact Support</a
          >

          <!-- Delete button -->
          <a
            href="/dashboard/<%= guild.id %>/delete"
            class="delete-btn"
            data-url="/dashboard/<%= guild.id %>/delete"
            >Delete</a
          >
        </div>
      </div>

      <div id="contentDashboard" class="contentDashboard"></div>
    </main>

    <script>
      const dashboardLinks = document.querySelectorAll(".dashboard-links a");
      const contentDashboard = document.getElementById("contentDashboard");

      async function loadContent(url, clickedLink = null) {
        // Update active class
        dashboardLinks.forEach((link) => link.classList.remove("active"));
        if (clickedLink) clickedLink.classList.add("active");

        contentDashboard.innerHTML = `<p style="color:#888;">Loading...</p>`;

        try {
          const response = await fetch(url, {
            headers: { "X-Requested-With": "XMLHttpRequest" },
          });
          if (!response.ok)
            throw new Error(`HTTP error! status: ${response.status}`);
          const html = await response.text();

          // Insert fetched HTML
          contentDashboard.innerHTML = html;

          // Run any inline scripts in the fetched HTML
          const scripts = contentDashboard.querySelectorAll("script");
          scripts.forEach((oldScript) => {
            const newScript = document.createElement("script");
            if (oldScript.src) {
              newScript.src = oldScript.src;
              newScript.async = false; // to preserve execution order
            } else {
              newScript.textContent = oldScript.textContent;
            }
            // Append to contentDashboard (or document.head/body if you prefer)
            contentDashboard.appendChild(newScript);
            // Remove the old script tag after cloning to avoid duplicates
            oldScript.remove();
          });
        } catch (err) {
          contentDashboard.innerHTML = `<p style="color:red;">Error loading content: ${err.message}</p>`;
        }
      }

      dashboardLinks.forEach((link) => {
        link.addEventListener("click", (e) => {
          e.preventDefault();
          const url = link.getAttribute("data-url") || link.href;
          loadContent(url, link);
        });
      });

      // Load first page by default
      if (dashboardLinks.length > 0) {
        loadContent(
          dashboardLinks[0].getAttribute("data-url") || dashboardLinks[0].href,
          dashboardLinks[0]
        );
      }
    </script>
  </body>
</html>
